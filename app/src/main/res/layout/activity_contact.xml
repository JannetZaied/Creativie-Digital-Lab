<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lfou"
    tools:context=".ui.ActivityContact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"


        android:layout_marginTop="332dp"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <Button
            android:id="@+id/aboutus"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="About US" />

        <Button
            android:id="@+id/contact"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:text="Contact" />

        <Button
            android:id="@+id/gallery"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:text="Gallery" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="326dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phonr" />

            <TextView
                android:id="@+id/fb"
                android:layout_width="234dp"
                android:layout_height="35dp"
                android:text="@string/Link_to_Fb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phonr" />

            <TextView
                android:id="@+id/site"
                android:layout_width="234dp"
                android:layout_height="35dp"
                android:text="@string/Link_to_site" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phonr" />

            <TextView
                android:id="@+id/in"
                android:layout_width="234dp"
                android:layout_height="35dp"

                android:text="@string/Link_to_in" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phonr" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="231dp"
                android:layout_height="33dp"

                android:text="+216 70 028 343 / +216 54 137 708" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phonr" />

            <TextView
                android:id="@+id/mail"
                android:layout_width="213dp"
                android:layout_height="38dp"

                android:text="contact@creativedigital-lab.tn " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phonr" />

            <TextView
                android:id="@+id/adr"
                android:layout_width="266dp"
                android:layout_height="42dp"

                android:text="Avenue Mohamed 5, Tunis 2022,Tunisie CitÃ© de la Culture" />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

